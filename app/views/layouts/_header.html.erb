<%= nav_bar static: :top, brand: "debae", brand_link: root_path, responsive: true do %>
  <%= menu_group do %>
    <%= menu_item "Home", root_path %>
    <%= menu_item "All statements", statements_path %>
    <%= menu_item t("layouts.header.links.new_statement"), new_statement_path %>
  <% end %>
  <%= menu_group pull: :right do %>
    <% if user_signed_in? %>
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
          <%= image_tag current_user.avatar.url(:thumb), class: "img-circle avatar" %> <%= current_user.name %> <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <%= menu_item t("layouts.header.links.account_settings", default: "Account settings"), edit_user_profile_path %>
          <%= drop_down_divider %>
          <%= menu_item t("layouts.header.links.sign_out", default: "Sign out"), destroy_user_session_path, method: :delete %>
        </ul>
      </li>
    <% else %>
      <%= drop_down t("layouts.header.dropdowns.join", default: "Join") do %>
        <%= menu_item t("layouts.header.links.sign_in", auth_type: "Email", default: "Sign in with %{auth_type}"), new_user_session_path %>
        <%= menu_item t("layouts.header.links.sign_in", auth_type: "Facebook", default: "Sign in with %{auth_type}"), user_facebook_omniauth_authorize_path %>
        <%= menu_item t("layouts.header.links.sign_in", auth_type: "Google", default: "Sign in with %{auth_type}"), user_google_oauth2_omniauth_authorize_path %>
        <%= menu_item t("layouts.header.links.sign_in", auth_type: "Twitter", default: "Sign in with %{auth_type}"), user_twitter_omniauth_authorize_path %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
