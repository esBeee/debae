<%= form_for Comment.new(commentable: commentable) do |f| %>
  <%= f.hidden_field :commentable_id %>
  <%= f.hidden_field :commentable_type %>

  <%= f.text_field :body, placeholder: t("comments.placeholders.body", default: "Post a comment") %><br />

  <%= f.submit t("comments.buttons.submit", default: "Submit") %>
<% end %>
