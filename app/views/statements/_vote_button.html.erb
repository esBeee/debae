<% if existing_vote.nil? %>
  <%# Render the create/update vote button if the user hasn't voted yet. %>
  <%= render 'votes/create_or_update_button', voteable: statement, is_pro_vote: is_pro_vote %>
<% else %>
  <%# Render the destroy vote button if the user has already voted. %>
  <%= render 'votes/destroy_button', vote: existing_vote, is_pro_vote: is_pro_vote %>
<% end %>
