<% if existing_vote.nil? %>
  <%# Render the create/update vote button if the user hasn't voted yet. %>
  <% submit_value = is_pro_vote ? t("statements.show.buttons.vote_up", default: "Agree") : t("statements.show.buttons.vote_down", default: "Disagree") %>
  <%= render 'votes/create_or_update_button', voteable: statement, is_pro_vote: is_pro_vote, submit_value: submit_value %>
<% else %>
  <%# Render the destroy vote button if the user has already voted. %>
  <% submit_value = is_pro_vote ? t("statements.show.buttons.destroy_upvote", default: "Withdraw agreement") : t("statements.show.buttons.destroy_downvote", default: "Withdraw disagreement") %>
  <%= render 'votes/destroy_button', vote: existing_vote, is_pro_vote: is_pro_vote, submit_value: submit_value %>
<% end %>
