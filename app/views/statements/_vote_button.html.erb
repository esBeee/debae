<% if existing_vote.nil? %>
  <% submit_value = is_pro_vote ? t("votes.buttons.vote_up", default: "Agree") : t("votes.buttons.vote_down", default: "Disagree") %>
  <%= form_tag votes_path(statement_id: statement.id) do %>
    <%= hidden_field_tag "vote[is_pro_vote]", is_pro_vote %>
    <%= submit_tag submit_value %>
  <% end %>
<% else %>
  <% submit_value = is_pro_vote ? t("votes.buttons.destroy_up_vote", default: "Withdraw agreement") : t("votes.buttons.destroy_down_vote", default: "Withdraw disagreement") %>
  <%= form_tag vote_path(existing_vote), method: :delete do %>
    <%= submit_tag submit_value %>
  <% end %>
<% end %>
