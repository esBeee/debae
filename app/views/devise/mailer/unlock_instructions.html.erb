<h2><%= t("mailers.devise.unlock_instructions.headline", username: @resource.name, default: "Hello %{username}!") %></h2>

<p><%= t("mailers.devise.unlock_instructions.body_html", root_link: link_to("debae", root_url), default: "Your account has been locked due to an excessive number of unsuccessful sign in attempts.") %></p>

<p><%= t("mailers.devise.unlock_instructions.hint", default: "Click the link below to unlock your account:") %></p>

<p><%= link_to t("mailers.devise.unlock_instructions.unlock_link", default: "Unlock my account"), unlock_url(@resource, unlock_token: @token) %></p>
