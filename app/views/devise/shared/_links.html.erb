<div class="link-box">
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div class="link"><%= link_to t("users.links.forgot_password", default: "Forgot your password?"), new_password_path(resource_name) %></div>
  <% end -%>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div class="link"><%= link_to t("users.links.resend_confirmation", default: "Didn't receive confirmation instructions?"), new_confirmation_path(resource_name) %></div>
  <% end -%>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div class="link"><%= link_to t("users.links.resend_unlock_instructions", default: "Didn't receive unlock instructions?"), new_unlock_path(resource_name) %></div>
  <% end -%>

  <%- if devise_mapping.omniauthable? %>
    <hr>
    <div class="link"><%= link_to fa_icon("facebook-square", class: "brand-related facebook") + " " + t("layouts.header.links.sign_in", auth_type: "Facebook", default: "Sign in with %{auth_type}"), user_facebook_omniauth_authorize_path %></div>
    <div class="link"><%= link_to fa_icon("google", class: "brand-related google") + " " + t("layouts.header.links.sign_in", auth_type: "Google", default: "Sign in with %{auth_type}"), user_google_oauth2_omniauth_authorize_path %></div>
    <div class="link"><%= link_to fa_icon("twitter", class: "brand-related twitter") + " " + t("layouts.header.links.sign_in", auth_type: "Twitter", default: "Sign in with %{auth_type}"), user_twitter_omniauth_authorize_path %></div>
  <% end -%>
</div>
