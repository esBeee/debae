<% submit_value = is_pro_vote ? fa_icon("chevron-circle-up") : fa_icon("chevron-circle-down") %>

<% if existing_vote.nil? %>
  <%# Render the create/update vote button if the user hasn't voted yet. %>
  <% submit_name = is_pro_vote ? t("statement_argument_links.buttons.vote_up", default: "Vote up") : t("statement_argument_links.buttons.vote_down", default: "Vote down") %>
  <%= render 'votes/create_or_update_button', voteable: link, is_pro_vote: is_pro_vote, submit_value: submit_value, options: {css_class: "vote", title: submit_name} %>
<% else %>
  <%# Render the destroy vote button if the user has already voted. %>
  <% submit_name = is_pro_vote ? t("statement_argument_links.buttons.destroy_upvote", default: "Withdraw upvote") : t("statement_argument_links.buttons.destroy_downvote", default: "Withdraw downvote") %>
  <%= render 'votes/destroy_button', vote: existing_vote, is_pro_vote: is_pro_vote, submit_value: submit_value, options: {css_class: "vote pressed", title: submit_name} %>
<% end %>
