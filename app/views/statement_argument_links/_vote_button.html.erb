<% submit_value = is_pro_vote ? fa_icon("chevron-circle-up") : fa_icon("chevron-circle-down") %>

<% if existing_vote.nil? %>
  <%# Render the create/update vote button if the user hasn't voted yet. %>
  <%= render 'votes/create_or_update_button', voteable: link, is_pro_vote: is_pro_vote, submit_value: submit_value, css_class: "vote" %>
<% else %>
  <%# Render the destroy vote button if the user has already voted. %>
  <%= render 'votes/destroy_button', vote: existing_vote, is_pro_vote: is_pro_vote, submit_value: submit_value, css_class: "vote pressed" %>
<% end %>
