<%
  button_attributes = {
    type: "submit",
    class: "btn #{options[:css_class]}"
  }

  button_attributes[:title] = options[:title] if options[:title]
%>

<%= form_for Vote.new(voteable: voteable, is_pro_vote: is_pro_vote) do |f| %>
  <%= f.hidden_field :voteable_id %>
  <%= f.hidden_field :voteable_type %>
  <%= f.hidden_field :is_pro_vote %>
  <%= button_tag(button_attributes) do %>
    <%= submit_value %>
  <% end %>
<% end %>
