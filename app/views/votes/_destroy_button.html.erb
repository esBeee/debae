<%
  button_attributes = {
    type: "submit",
    class: "btn #{options[:css_class]}"
  }

  button_attributes[:title] = options[:title] if options[:title]
  button_attributes[:aria] = options[:aria] if options[:aria]
%>

<%= form_for vote, method: :delete do %>
  <%= button_tag(button_attributes) do %>
    <%= submit_value %>
  <% end %>
<% end %>
