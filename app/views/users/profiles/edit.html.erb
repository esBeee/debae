<h1><%= t("users.editings.headlines.edit_profile") %></h1>

<%= form_for(@user, url: user_profile_path(@user), multipart: true, html: { method: :put }) do |f| %>
  <%= render 'shared/active_record_errors', resource: @user %>

  <div class="form-group">
    <%= f.label :name, t("users.editings.labels.name", default: "Name") %><br />
    <%= f.text_field :name, class: "form-control" %>
    <span id="helpBlock" class="help-block"><%= t("users.editings.about_name_attribute", default: "we prefer your real name, but you are free to choose whatever you want") %></span>
  </div>

  <hr />

  <div class="form-group">
    <%= f.label :avatar, t("users.editings.labels.avatar", default: "Your avatar") %>
    <%= f.file_field :avatar %>
    <p class="help-block"><%= t("users.editings.about_avatar", default: "Choose an image of you to be used as your avatar") %></p>
  </div>

  <hr />

  <div class="form-group">
    <%= f.label :link_to_facebook, t("users.editings.labels.link_to_facebook", default: "Link to facebook") %><br />
    <%= f.text_field :link_to_facebook, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :link_to_twitter, t("users.editings.labels.link_to_twitter", default: "Link to twitter") %><br />
    <%= f.text_field :link_to_twitter, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :link_to_google_plus, t("users.editings.labels.link_to_google_plus", default: "Link to google+") %><br />
    <%= f.text_field :link_to_google_plus, class: "form-control" %>
  </div>

  <hr />

  <div class="checkbox">
    <label>
    <%= f.check_box :email_if_new_argument %> <%= t("users.editings.labels.email_if_new_argument", default: "Inform me about new arguments for my submitted statements") %>
    </label>
  </div>

  <%= f.submit t("users.editings.buttons.submit", default: "Save"), class: "btn btn-default" %>
<% end %>
